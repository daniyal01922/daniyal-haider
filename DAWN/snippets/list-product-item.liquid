<style>
    .quick-add__submit {
        background-image: url('https://cdn.shopify.com/s/files/1/0877/8734/0094/files/Group_1000008180.png?v=1718453864'); 
        background-size: contain;
        background-repeat: no-repeat;
        background-position: center;
        margin:auto;
        width:100%;
        max-width:20px;
        min-width:20px;
        height: 100%;
        max-height: 25px;
        min-height: 25px;
        text-indent: -9999px; 
    }
    .button--secondary:after
    {
      display:none;
    }
  </style>
  {% if product.published_at != blank %}
     <div class="bundler--product">
       {% if product.metafields.custom.top_badge != blank %}
         <div class="top_badge">
           {{ product.metafields.custom.top_badge }}
         </div>
       {% endif %}
       <div class="bundler--card_content">
         {% if product.metafields.custom.supply_duration != blank %}
           <div class="supply_duration">
             {{ product.metafields.custom.supply_duration }}
           </div>
         {% endif %}
         <div
           class="bundler--product-card js-bundler-card"
           {% if product.metafields.my_fields.badge != blank %}
             data-label="{{product.metafields.my_fields.badge}}"
           {% endif %}
           id="bundler--product-card--{{ product.id }}"
           data-price="{{ product.price }}"
           data-title="{% if block.settings.title != blank %}{{ block.settings.title }}{% else %}{{ product.title }}{% endif %}"
           data-id="{{ product.selected_or_first_available_variant.id }}"
           data-image="{{ product.featured_image | img_url: '600x' }}"
         >

           <div class="bundler--product-card-image-wrap">
             <a href="{% if product.type == 'Custom Bundle' %}/apps/bundles/bundle/109078{% else %}{{ product.url }}{% endif %}" aria-label="Product Details">
               {% if custom_img != blank %}
                 <img
                   src="{{ custom_img | img_url: '900x' }}"
                   alt="{{ product.title }}"
                   loading="lazy"
                   class="bundler--product-card-image"
                   width="900"
                   height="1060"
                 >
               {% else %}
                 <img
                   src="{{ product.featured_image | img_url: '900x' }}"
                   alt="{{ product.title }}"
                   loading="lazy"
                   class="bundler--product-card-image"
                   width="900"
                   height="1060"
                 >
               {% endif %}
             </a>
           </div>
         
           <div class="bundler--product-card-bottom ">
             <div class="bundler--product-card-info">
             </div>
             <div>
                 <div class="saving">
                 </div>

               {% if atc %}
                   <div class="quick-add no-js-hidden"> 
                     {%- liquid
                       assign product_form_id = 'quick-add-' | append: section_id | append: product.id
                       assign qty_rules = false
                       if product.selected_or_first_available_variant.quantity_rule.min > 1 or product.selected_or_first_available_variant.quantity_rule.max != null or product.selected_or_first_available_variant.quantity_rule.increment > 1
                         assign qty_rules = true
                       endif
                     -%}
                     {%- if product.variants.size > 1 or qty_rules -%}
                       <modal-opener data-modal="#QuickAdd-{{ product.id }}">
                         <button
                           id="{{ product_form_id }}-submit"
                    
                           class="quick-add__submit button button--full-width button--secondary{% if horizontal_quick_add %} card--horizontal__quick-add animate-arrow{% endif %}"
                           aria-haspopup="dialog"
                           aria-labelledby="{{ product_form_id }}-submit title-{{ section_id }}-{{ product.id }}"
                           data-product-url="{{ product.url }}"
                         >
                     
                           {{ 'products.product.choose_options' | t }}
                           {%- if horizontal_quick_add -%}
                             <span class="icon-wrap">{% render 'icon-arrow' %}</span>
                           {%- endif -%}
                           {%- render 'loading-spinner' -%}
                         </button>
                       </modal-opener>
                       <quick-add-modal id="QuickAdd-{{ product.id }}" class="quick-add-modal">
                         <div
                           role="dialog"
                           aria-label="{{ 'products.product.choose_product_options' | t: product_name: product.title | escape }}"
                           aria-modal="true"
                           class="quick-add-modal__content global-settings-popup"
                           tabindex="-1"
                         >
                           <button
                             id="ModalClose-{{ product.id }}"
                             type="button"
                             class="quick-add-modal__toggle"
                             aria-label="{{ 'accessibility.close' | t }}"
                           >
                            
                             {% render 'icon-close' %}
                           </button>
                           <div id="QuickAddInfo-{{ product.id }}" class="quick-add-modal__content-info"></div>
                          {% comment %} <div clas="imp">
                          {{ product.description }}
                          </div> {% endcomment %}
                         </div>
                      
                       </quick-add-modal>
                     {%- else -%}
                       <product-form data-section-id="{{ section.id }}">
                         {%- form 'product',
                           product,
                           id: product_form_id,
                           class: 'form',
                           novalidate: 'novalidate',
                           data-type: 'add-to-cart-form'
                         -%}
                           <input
                             type="hidden"
                             name="id"
                             value="{{ product.selected_or_first_available_variant.id }}"
                             class="product-variant-id"
                             {% if product.selected_or_first_available_variant.available == false %}
                               disabled
                             {% endif %}
                           >
                           <button
                             id="{{ product_form_id }}-submit"
                             type="submit"
                             name="add"
                             class="quick-add__submit button button--full-width button--secondary{% if horizontal_quick_add %} card--horizontal__quick-add{% endif %}"
                             aria-haspopup="dialog"
                             aria-labelledby="{{ product_form_id }}-submit title-{{ section_id }}-{{ product.id }}"
                             aria-live="polite"
                             data-sold-out-message="true"
                             {% if product.selected_or_first_available_variant.available == false %}
                               disabled
                             {% endif %}
                           >
                             <span>
                               {%- if product.selected_or_first_available_variant.available -%}
                                 {{ 'products.product.add_to_cart' | t }}
                               {%- else -%}
                                 {{ 'products.product.sold_out' | t }}
                               {%- endif -%}
                             </span>
                             <span class="sold-out-message hidden">
                               {{ 'products.product.sold_out' | t }}
                             </span>
                             {%- if horizontal_quick_add -%}
                               <span class="icon-wrap">{% render 'icon-plus' %}</span>
                             {%- endif -%}
                             {%- render 'loading-spinner' -%}
                           </button>
                         {%- endform -%}
                       </product-form>
                     {%- endif -%}
                   </div>
  
               {% else %}
                 <div class="">
                   <a
                     class="button"
                     href="{% if product.type == 'Custom Bundle' %}/apps/bundles/bundle/109078{% else %}{{ product.url }}{% endif %}"
                   >
                     {%- if atc_text %} {{ atc_text }} {% else %} Shop Now {% endif -%}
                   </a>
                 </div>
               {% endif %}
             </div>
           </div>
         </div>
         {% if product.metafields.custom.guarantee_text != blank %}
           <div class="guarantee_text">
             {{ product.metafields.custom.guarantee_text }}
           </div>
         {% endif %}
       </div>
     </div>
   {% endif %}
 